import random

def ask_question(question, correct_answer):
    answer = input(question + " ").strip().lower()
    if answer == correct_answer.lower():
        return True
    else:
        return False

def quiz():
    print("Welcome to my Mini Quiz!")
    name = input("Enter your name: ").strip()  # NEW FEATURE
    if name == "":  # NEW FEATURE
        name = "Player"  

    print("Hello", name + "! Let's start the quiz!\n")

    questions = [
        ("What is the capital of France?", "Paris"),
        ("What is 5 x 6?", "30"),
        ("What planet is known as the Red Planet?", "Mars"),
        ("What is the largest animal in the world?", "Blue Whale"),
        ("How many continents are there?", "7"),
        ("What is H2O commonly known as?", "Water")
    ]

    random.shuffle(questions)  # MAJOR FEATURE

    score = 0
    total_questions = 3

    for i in range(total_questions):
        q, ans = questions[i]
        if ask_question(str(i+1) + ". " + q, ans):
            score += 1
            print("Correct!")
        else:
            print("Wrong! It's", ans + ".")

    print("\n" + name + ", you got", score, "out of", total_questions, "correct!")
    if score == total_questions:
        print("Amazing! You got them all right!")
    elif score > 0:
        print("Nice try, you did well!")
    else:
        print("Better luck next time!")

quiz()
